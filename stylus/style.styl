@import "normalize.styl"
@import "fonts.styl"

dark_grey = #333333
light_grey = #818181
rojo = #BD255B
lighter_gray = #F0F0F0
a
	text-decoration none

body
	font-family 'Varela Round', 'sans-serif'
	font-size 16px

figure 
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0

//Buttons
.button-menu
	color dark_grey
	left 0.5em
	margin-top -10px
	position absolute
	top 50%

//oocss clases
.center-block 
	margin 0 auto
.center-txt
	text-align center
.right-txt
	text-align right
.relative
	position relative
.padding
	padding 1em
.padding-tb
	padding 1em 0
.left
	float left
.right
	float right
.wrap
		width 1000px
.round
	border-radius 50%
	overflow hidden

.actions
	position absolute	
	bottom 0
	left 0
	right 0
	background rgba(black, 0.3)
.action
	color white	
	margin-right .5em
	font-size 1.2em
	&:last-child
		margin 0
	&.gray
		color light_grey
.container
	padding 1.4rem
	font-size 0
	text-align center
.border-bottom
	border-bottom 1px solid light_grey
.name
	color dark_grey
.author
	color light_grey
.description
	.name
		padding-top 1em
		margin-bottom -0.5em
.header
	height 3.5em

	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em
.menu
	display none
.song
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	text-align left
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0

.playing
	
	&.small
		width 20em
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		position absolute
		top -5px
	.min 
		left 0
	.max
		right 0
		
	.total
		background light_grey
		border-radius 2px
		height 5px
		margin 0 auto
		width 100%
		width 75%
		
	.state
		height 5px
		background rojo
		width 30%
		border-radius 2px
		position relative
	.circle
		background dark_grey
		width 10px
		height 10px
		border-radius 50%
		position absolute
		right 0
		top -2px
.input
	border solid 1px light_grey
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em
.search-icon
	position absolute
	left 0.5em
	top 0.8em
	color light_grey
.close-icon
	position absolute
	top 0.6em
	color light_grey
	right .5em
	font-size 1.1em

@media screen and (min-width:480px)

	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto

@media screen and (min-width:1000px)
	body
		background lighter_gray
	.button-menu
		display none
	.header
		height auto
		.title
			display none

	.isotipo
		width 122px
	.logo
		padding 1.3em 0
		overflow hidden
		background white
	.avatar
		width 38px
		height 38px
	.username
		color light_grey
		position relative
		top 9px
		margin-left .5em
		&:after
			content ""
			border-left 7px solid transparent
			border-top 9px solid light_grey
			border-right 7px solid transparent
			display inline-block
			margin-left 0.4em
	.menu 
		display block
		background lighter_gray
		overflow hidden
		.item
			float left
			list-style none		
		a
			color dark_grey
			text-transform uppercase
			padding 1em
			display block
			cursor pointer
			border-top 5px solid transparent
			&:hover
				border-top 5px solid light_grey
